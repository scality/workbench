{
    "zookeeper": {
        "connectionString": "127.0.0.1:2181/backbeat"
    },
    "kafka": {
        "hosts": "127.0.0.1:9092",
        "compressionType": "none",
        "requiredAcks": 1
    },
    "queuePopulator": {
        "cronRule": "*/5 * * * * *",
        "batchMaxRead": 100,
        "zookeeperPath": "/bucket-notification",
        "logSource": "bucketd",
        "exhaustLogSource": true,
        "bucketd": {
            "host": "127.0.0.1",
            "port": 9000
        }
    },
    "metrics": {
        "topic": "backbeat-metrics"
    },
    "extensions": {
        "notification": {
            "topic": "backbeat-bucket-notification",
            "monitorNotificationFailures": true,
            "zookeeperPath": "/bucket-notification",
            "queueProcessor": {
                "groupId": "backbeat-bucket-notification-group",
                "concurrency": 1000
            },
            "bucketMetastore": "metastore",
            "destinations": [
                {
                    "resource": "destination1",
                    "type": "kafka",
                    "host": "127.0.0.1:9094",
                    "topic": "notifications",
                    {{ if eq .Features.BucketNotifications.DestinationAuth.Type "basic" }}
                    "auth": {
                        "type": "basic",
                        "credentialsFile": "notificationCredentials.json"
                    }
                    {{ else if eq .Features.BucketNotifications.DestinationAuth.Type "none" }}
                    "auth": {}
                    {{ end }}
                }
            ]
        }
    },
    "log": {
        "logLevel": "info",
        "dumpLevel": "error"
    },
    "server": {
        "healthChecks": {
            "allowFrom": ["127.0.0.1/8", "::1"]
        },
        "host": "localhost",
        "port": 8901
    },
    "certFilePaths": {},
    "redis": {
        "host": "localhost",
        "port": 6379
    }
}
